// prisma/schema.prisma

// Define the SQLite datasource
datasource db {
  provider = "sqlite"  // Use SQLite as the database provider
  url      = "file:./dev.db"  // SQLite database stored in the 'dev.db' file
}

// Configure the Prisma client generator
generator client {
  provider = "prisma-client-js"  // Generate the Prisma Client
}

// Define the User model (example)
model User {
  id       Int    @id @default(autoincrement()) // Auto-incrementing primary key
  username String @unique                     // Unique username field
  password String                             // Password field
}
